{
  "name": "financas-crm",
  "version": "1.0.0",
  "description": "CRM Web completo para gestão de finanças pessoais",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "db:generate": "cd backend && npx prisma generate",
    "db:push": "cd backend && npx prisma db push",
    "db:seed": "cd backend && npm run seed"
  },
  "keywords": ["finanças", "crm", "dashboard", "react", "nodejs"],
  "author": "Bruno Soares",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
